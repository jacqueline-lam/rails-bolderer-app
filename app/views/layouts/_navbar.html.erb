<a class="navbar-brand" href="/"><img src="/images/icon.png" alt="logo"></a>
<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
  <span class="navbar-toggler-icon"></span>
</button>

<div class="collapse navbar-collapse" id="navbarNav">
  <ul class="navbar-nav">
    <li class="nav-item">
      <%= link_to "Homepage", root_path, class: "nav-link" %>
    </li>

    <% if logged_in? %>
      <li class="nav-item">
        <%= link_to "All Problems", problems_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "All Users", users_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Your Sends", user_sends_path(current_user), class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "@#{current_user.username}", user_path(current_user), class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Log Out", logout_path, class: "nav-link" %>
      </li>
    <% else %>
      <li class="nav-item">
        <%= link_to "Create Account", new_user_path, class: "nav-link" %>
        <%= link_to "Login", login_path, class: "nav-link" %>
        <%= link_to "Login via GitHub", '/auth/github', class: "nav-link" %>
      </li>
    <% end %>
  </ul>
</div>