<h2>Login</h2>

<!-- Print error message -->
<% if !!@error %>
  <div class="alert">
    <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
    <%= @error %>
  </div>
<% end %>

<%= form_tag(login_path) do %>
  <%= label_tag :username %>
  <%= text_field_tag :username %>
  <%= label_tag :password %>
  <%= password_field_tag :password %>
  <%= submit_tag 'Log In'%>
<% end %>

<%= link_to "Login via GitHub", 'auth/github' %>