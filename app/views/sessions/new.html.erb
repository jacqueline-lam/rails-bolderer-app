<h2>Login</h2><br>

<!-- Print error message -->
<% if !!@error %>
  <div class="alert">
    <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
    <%= @error %>
  </div>
<% end %>

<%= form_tag(login_path) do %>
  <%= label_tag :username %>
  <div><%= text_field_tag :username %></div>
  <%= label_tag :password %>
  <div><%= password_field_tag :password %></div><br>
  <%= submit_tag 'Log In', class: 'btn btn-primary d-inline' %>
<% end %><br>

<%= link_to "Login via GitHub", 'auth/github' %>