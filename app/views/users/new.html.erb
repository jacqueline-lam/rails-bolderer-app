<h1>Create a user account</h1>

<!-- Display error messages -->
<%= render partial: '/errors', locals: { record: @user } %><br>

<%= form_for @user do |f| %> 
  <%= f.label :username %>
  <div><%= f.text_field :username %></div>
  <%= f.label :password %>
  <div><%= f.password_field :password %></div>
  <%= f.label :confirm_password %>
  <div><%= f.password_field :password_confirmation %></div><br>
  <%= f.submit "Sign Up" %>
<% end %>
