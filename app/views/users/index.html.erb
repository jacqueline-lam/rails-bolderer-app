<h1 class="heading">All Users</h1>

<!-- Extra features -->
 <div id="leaderboard">
  <h3 class="subheading">LEADERBOARD</h3>
  <div id="leaderboard_redpoint">
    <h4>Redpoint Winners</h4>
    <i>Who climbed the most problems this month?</i>
    <table class="table table-hover">
      <thead class="thead-dark">
        <th><%= image_tag "winner.png", class: "image_icon" %></th>
        <th>Winners</th>
        <th>Problems sent</th>
      </thead>
      <tbody>
        <% @red_point_winners.each.with_index(1) do |winner, index| %>
        <tr>
          <td><%= index %></td>
          <td><%= link_to winner.username, user_path(winner) %></td>
          <td><%= sends_this_month(winner).count %></td>
        </tr>
        <% end %>                
      </tbody>
    </table>
  </div>

  <div id="leaderboard_crusher">
    <h4>Crusher of The Month</h4>
    <i>Who climbed the hardest grade this month?</i><br>
    <h5><%= image_tag "winner.png", class: "image_icon" %>
      The winner is... <span>@<%= link_to @best_climber.username, user_path(@best_climber) %></span>!!
    </h5>
  </div>
</div><br><hr>

<!-- Display all users -->
<h3 class="subheading">ALL USERS</h3>
  <table class="table table-bordered table-striped table-hover">
    <thead class="thead-dark">
      <th>User</th>
      <th>Problems Sent</th>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user_path(user) %></td>
        <td><%= user.sends.count %></a></td>
      </tr>
      <% end %>
    </tbody>
  </table>
