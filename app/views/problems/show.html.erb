<h1><%= @problem.name %> at <%= @problem.wall.name %> Wall</h1>
<h3>Set: <%= format_timestamp_to_set_date(@problem) %></h3>
<h4>Sends: <%= @problem.sends.count%> </a></h4>
<ul>
  <li>Color: <%= @problem.color %></li>
  <li>Grade: <%= @problem.grade %></li>
  <% if @problem.image.present? %>
    <li>Image:<br><%= @problem.image %></li>
  <% end %>
  <!-- helper method to display style in sentence -->
  <li>Styles: <%= display_styles(@problem) %></li>
</ul>

<br><br>
<h3>ACTIVITY</h3><hr>
<!-- order by least attempts? or latest?-->
<% @problem.sends.each do |send| %>
  <h3>@<%= link_to send.user.username, user_path(send.user) %></h3>  
  <!-- float right if possible -->
  <p><%= display_attempts(send) %></p>
  <p>Sent on: <%= send.date_sent %></p>
  <p><%= send.image if send.image %></p>
<% end %>