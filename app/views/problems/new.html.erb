<h2>Create a New Problem</h2>

<%= render partial: '/errors', locals: { record: @problem } %>

<%= form_for @problem do |f| %>
  <%= f.label :wall %>
  <%= f.select :wall_id, options_from_collection_for_select(Wall.all, :id, :name) %>
  <br>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :color %>
  <%#= <%= f.select :color, options_from_collection_for_select(Problem::COLORS, :color, :color) %>
  <br>
  <%= f.label :grade %>
  <%#= <%= f.select :grade, options_from_collection_for_select(Problem::GRADE, :grade, :grade) %>
  <br>
  <%= f.label :styles %>
  <%= f.collection_check_boxes :style_ids, Style.all, :id, :name %>
  <!-- <input type="checkbox" value="1" name="problem[style_ids][]" id="style_id"> -->
  <br>
  <%= f.label :image %>
  <%= f.text_field :image %><br>
  <i>*Instructions: Drop your image onto <a href="https://imgur.com">Imgur</a>. Click 'get share links' and copy the "Embed in HTML" link.</i>
  <br><br>

  <%= f.submit %> 
<% end %>